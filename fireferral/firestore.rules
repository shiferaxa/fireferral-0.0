rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for role checking
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isInvisionAdmin() {
      return isAuthenticated() && getUserData().role == 'invisionAdmin';
    }
    
    function isProperty() {
      return isAuthenticated() && getUserData().role == 'property';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isActiveUser() {
      return isAuthenticated() && getUserData().isActive == true;
    }
    
    // System config - read only for authenticated users
    match /system_config/{document} {
      allow read: if isAuthenticated();
      allow write: if false; // Only through admin SDK or setup
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId) && isActiveUser();
      
      // Invision admin can read all users
      allow read: if isInvisionAdmin() && isActiveUser();
      
      // Users can update their own profile (limited fields only)
      allow update: if isOwner(userId) && 
        isActiveUser() &&
        // Prevent users from changing critical fields
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isActive']);
      
      // Only Invision admin can update role and isActive
      allow update: if isInvisionAdmin() && isActiveUser();
      
      // Only Invision admin can create users (property accounts)
      allow create: if isInvisionAdmin() && 
        isActiveUser() &&
        request.resource.data.role == 'property';
      
      // Allow initial Invision admin creation (when no admin exists)
      allow create: if request.resource.data.role == 'invisionAdmin' &&
        !exists(/databases/$(database)/documents/system_config/invision);
      
      // No one can delete users (use isActive flag instead)
      allow delete: if false;
    }
    
    // Referrals collection
    match /referrals/{referralId} {
      // Properties can read their own referrals only
      allow read: if isProperty() && 
        isActiveUser() &&
        resource.data.submittedBy == request.auth.uid;
      
      // Invision admin can read ALL referrals
      allow read: if isInvisionAdmin() && isActiveUser();
      
      // Properties can create referrals
      allow create: if isProperty() && 
        isActiveUser() &&
        request.resource.data.submittedBy == request.auth.uid;
      
      // Properties can update their own referrals (limited fields and only if pending)
      allow update: if isProperty() && 
        isActiveUser() &&
        resource.data.submittedBy == request.auth.uid &&
        resource.data.status == 'pending' &&
        // Prevent changing critical fields
        !request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'submittedBy', 'status', 'commissionAmount'
        ]);
      
      // Invision admin can update any referral
      allow update: if isInvisionAdmin() && isActiveUser();
      
      // No deletion of referrals (audit trail)
      allow delete: if false;
    }
    
    // Fiber packages collection
    match /packages/{packageId} {
      // All authenticated active users can read packages
      allow read: if isAuthenticated() && isActiveUser();
      
      // Only Invision admin can manage packages
      allow write: if isInvisionAdmin() && isActiveUser();
    }
    
    // Commission settings
    match /commission_settings/{settingId} {
      // Only Invision admin can read commission settings
      allow read: if isInvisionAdmin() && isActiveUser();
      
      // Only Invision admin can update commission settings
      allow write: if isInvisionAdmin() && isActiveUser();
    }
    
    // Analytics and reports - ONLY Invision admin can access
    match /analytics/{document=**} {
      // Only Invision admin can read analytics
      allow read: if isInvisionAdmin() && isActiveUser();
      
      // Only system can write analytics (via Cloud Functions)
      allow write: if false;
    }
    
    // Audit logs (read-only) - ONLY Invision admin
    match /audit_logs/{logId} {
      // Only Invision admin can read audit logs
      allow read: if isInvisionAdmin() && isActiveUser();
      
      // Only system can write audit logs
      allow write: if false;
    }
    
    // Notifications
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && 
        isActiveUser() &&
        resource.data.userId == request.auth.uid;
      
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && 
        isActiveUser() &&
        resource.data.userId == request.auth.uid &&
        // Only allow marking as read
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead', 'readAt']);
      
      // System creates notifications
      allow create: if false;
      
      // Users can delete their own notifications
      allow delete: if isAuthenticated() && 
        isActiveUser() &&
        resource.data.userId == request.auth.uid;
    }
    
    // Organizations collection - Legacy, kept for backward compatibility
    match /organizations/{orgId} {
      // Only Invision admin can access
      allow read, write: if isInvisionAdmin() && isActiveUser();
    }
    
    // Organization settings - Legacy, kept for backward compatibility
    match /organization_settings/{orgId} {
      // Only Invision admin can access
      allow read, write: if isInvisionAdmin() && isActiveUser();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
